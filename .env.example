# Environment Variables Configuration
# Copy this file to .env and fill in your values

# Required: Session secret for Flask sessions (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SESSION_SECRET=your-super-secret-session-key-here

# Optional: Flask environment (development, production)
FLASK_ENV=development

# Optional: Server port (auto-detected on most cloud platforms)
PORT=5000

# Optional: Redis configuration (for session storage in production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=changeme

# Optional: Database URL (if using persistent storage)
DATABASE_URL=postgresql://user:password@localhost/cryptokeys

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Rate limiting (requests per minute per IP)
RATE_LIMIT=60